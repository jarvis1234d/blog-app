<%- include("partials/header") -%>

<h1>Compose</h1>
<form action="/compose" method="POST">
    <div class="form-group">
        <label for="title" class="control-label">Title</label>
        <input id="title" class="form-control" type="text" name="postTitle">    
        <label for="content" class="control-label">Post</label>
        <textarea id="content" class="form-control" name="postBody" cols="30" rows="5"></textarea>
    </div>

    <button type="submit" class="btn btn-primary" name="publish">Publish</button>
</form>

<%- include("partials/footer") -%>